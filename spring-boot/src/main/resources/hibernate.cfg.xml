<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>
  <session-factory>
    <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="connection.url">jdbc:mysql://localhost:3306</property>
    <property name="connection.username">portfolio</property>
    <property name="connection.password">portfolio</property>
    <mapping class="com.alexanderfisher.hibernate.dto.Categories"/>
    <mapping class="com.alexanderfisher.hibernate.dto.Projects"/>
    <mapping class="com.alexanderfisher.hibernate.dto.Galleries"/>
    <mapping class="com.alexanderfisher.hibernate.dto.Images"/>
  </session-factory>
</hibernate-configuration>