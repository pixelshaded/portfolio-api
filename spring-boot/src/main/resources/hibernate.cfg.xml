<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>
  <session-factory>
    <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="connection.url">jdbc:mysql://localhost:3306</property>
    <property name="connection.username">portfolio</property>
    <property name="connection.password">portfolio</property>
    <mapping class="com.alexanderfisher.portfolio.api.hibernate.entities.CategoriesEntity"/>
    <mapping class="com.alexanderfisher.portfolio.api.hibernate.entities.ProjectsEntity"/>
    <mapping class="com.alexanderfisher.portfolio.api.hibernate.entities.GalleriesEntity"/>
    <mapping class="com.alexanderfisher.portfolio.api.hibernate.entities.ImagesEntity"/>
  </session-factory>
</hibernate-configuration>